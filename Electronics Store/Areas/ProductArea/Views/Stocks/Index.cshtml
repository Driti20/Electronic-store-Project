@model IEnumerable<Electronics_Store.Areas.ProductArea.Models.Stock>

@{
    ViewData["Title"] = "Stocks";
    Layout = "~/Areas/ProductArea/Views/Shared/_Layout.cshtml";
}

<h1>All Stocks</h1>

<p>
    <a class="btn btn-success btn-outline-primary text-white" asp-action="Create">Create New</a>
</p>
<table class="table bg-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InitialUnits)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.AvailableUnits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecommendedSalePricePerUnit)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-lg-1 col-md-1 col-sm-1 col-1">
                @Html.DisplayFor(modelItem => item.InitialUnits)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.AvailableUnits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecommendedSalePricePerUnit)
            </td>*@
            <td class="col-lg-2 col-md-2 col-sm-1 col-1">
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            @*<td class="col-lg-2 col-md-2 col-sm-1">
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>*@
            <td class="col-lg-5 col-md-4 col-sm-3 col-1">
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td class="col-lg-4 col-md-5 col-sm-7">
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
