@using Electronics_Store.Areas.Client.Models
@model IEnumerable<SlideShow>

@{
    int i = 0;
}
@if (Model.Any())
{
    <div id="carouselExampleIndicators" class="carousel slide pb-5" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="carousel-item @active">
                    <img src="~/slideshow_images/@item.Name" class="d-block w-100" style="height: 65vh" alt="image">
                </div>
            }
        </div>
        <button class="carousel-control-prev bg-transparent border-0" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next bg-transparent border-0" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
}